<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ticketmybatis.repository.MybatisReservationRepository">
    <select id="findAllReservation" resultType="ReservationEntity">
        select * from reservation;
    </select>
    <select id="findAllJourney" resultType="JourneyEntity">
        select * from journey;
    </select>

    <select id="findCondReservation" parameterType="ReservationEntity" resultType="ReservationEntity">
        select * from reservation
<!--        ticket-->
<!--        where name like concat('%',#{name}, '%')-->
<!--        and publisher like concat('%',#{publisher}, '%');-->
    </select>


    <select id="findByIdReservation" parameterType="Long" resultType="ReservationEntity">
        select
        *
        from
        reservation
        where
        reservation_id = #{reservation_id}
    </select>

    <delete id="delete" parameterType="ReservationEntity">
        delete from reservation
        where
        reservation_id = #{reservation_id}
    </delete>

</mapper>